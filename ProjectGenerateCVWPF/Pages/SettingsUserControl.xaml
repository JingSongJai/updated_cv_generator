<UserControl
    x:Class="ProjectGenerateCVWPF.Pages.SettingsUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:ProjectGenerateCVWPF.Utilities"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectGenerateCVWPF.Pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="630"
    d:DesignWidth="420"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="forButton" TargetType="Button">
            <Setter Property="FontFamily" Value="{StaticResource Segoe UI}" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontWeight" Value="Light" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="borderBackground"
                            Width="100"
                            Margin="5,7"
                            Padding="5,3"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding Foreground}"
                            BorderThickness="1"
                            CornerRadius="3">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                ContentSource="Content" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="borderBackground" Property="Background" Value="#0192ff" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="btnAdd" TargetType="Button">
            <Setter Property="FontFamily" Value="{StaticResource Segoe UI}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Light" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="borderBackground"
                            Height="40"
                            Background="{TemplateBinding Background}"
                            CornerRadius="3">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                ContentSource="Content" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="borderBackground" Property="Background" Value="{StaticResource btnColor1}" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="btnRemove" TargetType="Button">
            <Setter Property="FontFamily" Value="{StaticResource Segoe UI}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Light" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="borderBackground"
                            Width="80"
                            Height="40"
                            Background="{TemplateBinding Background}"
                            CornerRadius="3">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                ContentSource="Content" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <converter:NumberToCornerRadius x:Key="converter1" />
        <converter:ColorConverter x:Key="converter2" />
        <converter:ColorToHex x:Key="converter3" />
        <converter:ColorToRGB x:Key="converter4" />
    </UserControl.Resources>
    <Border
        Padding="5"
        Background="{StaticResource cvText}"
        CornerRadius="0 15 15 15">
        <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Margin="5,0"
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource btnColor1}"
                    Text="Settings" />

                <StackPanel Grid.Row="1">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <TextBlock
                            Padding="10"
                            FontSize="15"
                            Text="Font : " />
                        <ComboBox
                            x:Name="cbFont"
                            Padding="10"
                            FontFamily="{StaticResource Segoe UI}"
                            FontSize="15"
                            FontWeight="Light"
                            SelectedIndex="0"
                            SelectionChanged="ComboBox_SelectionChanged"
                            Style="{StaticResource MaterialDesignComboBox}">
                            <ComboBoxItem Content="Segoe UI" />
                            <ComboBoxItem Content="Arial" />
                            <ComboBoxItem Content="Calibri" />
                            <ComboBoxItem Content="Garamond" />
                            <ComboBoxItem Content="Georgia" />
                            <ComboBoxItem Content="Roboto" />
                            <ComboBoxItem Content="Times New Roman" />
                            <ComboBoxItem Content="Verdana" />
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="2">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <TextBlock
                            Padding="10"
                            VerticalAlignment="Center"
                            FontSize="15"
                            Text="CornerRadius : " />
                        <materialDesign:NumericUpDown
                            Width="120"
                            Minimum="0"
                            Value="{Binding Radius, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource converter1}, Mode=TwoWay}" />
                    </StackPanel>
                </StackPanel>
                <UniformGrid Grid.Row="3" Columns="2">
                    <TextBlock
                        Margin="5,10"
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource btnColor1}"
                        Text="Colors" />
                    <!--<Button
                        Margin="60,0,0,0"
                        Background="#01a3fe"
                        Click="Button_Click"
                        Content="Default"
                        FontFamily="{StaticResource Segoe UI}"
                        FontSize="13"
                        FontWeight="Thin"
                        Foreground="White"
                        Style="{StaticResource forButton}" />-->
                </UniformGrid>
                <ItemsControl
                    x:Name="colorList"
                    Grid.Row="4"
                    Background="Transparent"
                    BorderThickness="0"
                    ItemsSource="{Binding CVColor}"
                    ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                    ScrollViewer.VerticalScrollBarVisibility="Hidden">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel
                                Width="400"
                                Height="150"
                                Margin="10,-10,0,-5">
                                <TextBlock
                                    Margin="0,5,0,10"
                                    FontSize="15"
                                    Style="{DynamicResource headerText2}"
                                    Text="{Binding Name}" />
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:ColorPicker
                                        x:Name="colorPicker"
                                        Width="250"
                                        Height="80"
                                        Color="{Binding ColorBrush, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource converter2}, Mode=TwoWay}" />
                                    <StackPanel>
                                        <TextBox
                                            Width="120"
                                            Margin="5"
                                            materialDesign:HintAssist.Hint="Hex"
                                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                            Text="{Binding ElementName=colorPicker, Path=Color, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource converter3}}" />
                                        <!--<TextBox
                                            Width="120"
                                            Margin="5"
                                            materialDesign:HintAssist.Hint="RGB"
                                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                            Text="{Binding ElementName=colorPicker, Path=Color, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource converter4}}" />-->
                                        <!--<TextBlock Text="{Binding ElementName=colorPicker, Path=Color, UpdateSourceTrigger=PropertyChanged}"
                                                   Style="{StaticResource headerText}"
                                                   FontSize="13"/>-->
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
    </Border>
</UserControl>
